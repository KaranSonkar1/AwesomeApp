<% layout("layouts/boilerplate") %>

<div class="row mt-5">
  <div class="col-md-8 offset-md-2 text-center">
    <h1 class="display-4 mb-3">Welcome to Wanderlust 🌍</h1>
    <p class="lead">Find and share beautiful travel destinations across the globe.</p>

    <% if (currentUser) { %>
      <p class="mt-4">Logged in as <strong><%= currentUser.username %></strong></p>
      <a href="/listings" class="btn btn-dark mt-3">Browse Listings</a>
      <a href="/logout" class="btn btn-outline-secondary mt-3 ms-2">Logout</a>
    <% } else { %>
      <div class="mt-4">
        <a href="/register" class="btn btn-primary me-2">Register</a>
        <a href="/login" class="btn btn-outline-dark">Login</a>
      </div>
    <% } %>

    <% if (success) { %>
      <div class="alert alert-success mt-4"><%= success %></div>
    <% } %>

    <% if (error) { %>
      <div class="alert alert-danger mt-4"><%= error %></div>
    <% } %>
  </div>
</div>
