<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-2 show-card mb-4 listing-card">
    <img
      src="<%= listing.image?.url || '/images/default.jpg' %>"
      class="card-img-top show-image"
      alt="Listing image"
    />
    <div class="card-body">
      <p class="card-text">
        <i>
          <% if (listing.owner) { %> Owner: <%= listing.owner.username %> <% } else { %>
          Owner not available <% } %>
        </i>
      </p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
      </p>
      <p class="card-text"><%= listing.location %>, <%= listing.country %></p>

      <% if (currentUser && listing.owner && !listing.owner._id.equals(currentUser._id)) { %>
        <a href="/bookings/<%= listing._id %>/checkout" class="btn btn-success mt-3">
          <i class="bi bi-calendar-check me-1"></i> Book Now
        </a>
      <% } %>
    </div>
  </div>

  <% if (currentUser && listing.owner && listing.owner._id.equals(currentUser._id)) { %>
    <div class="col-8 offset-2 d-flex justify-content-start gap-3 mb-4">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">
        <i class="bi bi-pencil-square me-1"></i> Edit
      </a>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=DELETE"
        onsubmit="return confirm('Are you sure you want to delete this listing?');"
      >
        <button class="btn btn-danger">
          <i class="bi bi-trash me-1"></i> Delete
        </button>
      </form>
    </div>
  <% } %>

  <!-- REVIEW FORM -->
  <% if (currentUser) { %>
    <div class="col-8 offset-2 mt-5 mb-3">
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%= listing._id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="reviewTitle" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="reviewTitle"
            name="review[title]"
            required
          />
        </div>

        <div class="mb-3">
          <label for="rating" class="form-label">Rating:</label>
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="reviewComment" class="form-label">Comment</label>
          <textarea
            class="form-control"
            id="reviewComment"
            name="review[comment]"
            rows="3"
            required
          ></textarea>
          <div class="invalid-feedback">Please add some comments for review</div>
        </div>

        <button type="submit" class="btn btn-primary">Submit Review</button>
      </form>
    </div>
  <% } %>

  <!-- REVIEWS LIST -->
  <div class="col-8 offset-2 mt-5">
    <h4 class="mb-4">Reviews</h4>

    <% if (listing.reviews.length === 0) { %>
      <div class="alert alert-info" role="alert">No reviews yet.</div>
    <% } else { %>
      <% listing.reviews.forEach(review => { %>
        <div class="card shadow-sm mb-4 rounded">
          <div class="card-body">
            <h5 class="card-title fw-bold"><%= review.title %></h5>
            <h6 class="card-subtitle mb-2 text-warning">
              Rating:
              <% for (let i = 1; i <= 5; i++) { %>
                <% if (i <= review.rating) { %>
                  <i class="bi bi-star-fill"></i>
                <% } else { %>
                  <i class="bi bi-star"></i>
                <% } %>
              <% } %>
            </h6>
            <p class="card-text fst-italic"><%= review.comment %></p>
            <p class="card-text">
              <small class="text-muted">
                Posted on <%= new Date(review.createdAt).toLocaleDateString("en-IN", {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                }) %>
              </small>
            </p>

            <% if (currentUser) { %>
              <form
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="POST"
                onsubmit="return confirm('Are you sure you want to delete this review?');"
              >
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>

  <div class="col-8 offset-3 mb-3">
    <h3>Where you will be</h3>
    <div id="map"></div>
  </div>
</div>

<script src="/js/map.js"></script>
